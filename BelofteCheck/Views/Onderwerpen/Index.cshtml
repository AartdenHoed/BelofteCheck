@model BelofteCheck.ViewModels.OnderwerpenListVM
@Html.HiddenFor(model => model.MessageSection.ErrorLevel, new { @class = "bc-msgtrigger", @onchange = "seterror(this)" })


<h2 class="bc-h">@Html.DisplayFor(model => model.MessageSection.Title)</h2>

<h3 class="bc-h">@Html.DisplayFor(model => model.MessageSection.Message)</h3>

<p>
    @Html.ActionLink("Nieuw", "Create")
</p>
<table class="table">
    <tr>
        <th class="bc-16">
            @Html.DisplayNameFor(model => model.OnderwerpenLijst[0].OnderwerpID)
        </th>
        <th class="bc-40">
            @Html.DisplayNameFor(model => model.OnderwerpenLijst[0].Omschrijving)
        </th>
        <th class="bc-40"></th>
    </tr>

    @foreach (var item in Model.OnderwerpenLijst)
    {
        <tr>
            <td class="bc-16">
                @Html.DisplayFor(modelItem => item.OnderwerpID)
            </td>
            <td class="bc40">
                @Html.DisplayFor(modelItem => item.Omschrijving)
            </td>
            <td class="bc-40">
                @Html.ActionLink("Bewerk", "Edit", new { OnderwerpID = item.OnderwerpID }) |
                @Html.ActionLink("Bekijk", "Details", new { OnderwerpID = item.OnderwerpID }) |
                @Html.ActionLink("Verwijder", "Delete", new { OnderwerpID = item.OnderwerpID })
            </td>
        </tr>
    }

</table>
