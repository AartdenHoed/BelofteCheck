@model BelofteCheck.ViewModels.StemmingenListVM
@Html.HiddenFor(model => model.MessageSection.ErrorLevel, new { @class = "bc-msgtrigger", @onchange = "seterror(this)" })

<h2 class="bc-h">@Html.DisplayFor(model => model.MessageSection.Title)</h2>

<h3 class="bc-h">@Html.DisplayFor(model => model.MessageSection.Message)</h3>

@using (Html.BeginForm("Create", "Stemmingen", FormMethod.Post))
{
    <hr />
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <dl class="bc-dl">
            <dt class="bc-dt">
                @Html.DisplayNameFor(model => model.StemDatum)
            </dt>
            <dd class="bc-dd">
                @Html.EditorFor(model => model.StemDatum)
                @Html.ValidationMessageFor(model => model.StemDatum, "", new { @class = "text-danger" })
            </dd>
            <dt class="bc-dt">
                @Html.DisplayNameFor(model => model.WetID)
            </dt>

            <dd class="bc-dd">
                @Html.EditorFor(model => model.WetID, new { htmlAttributes = new { @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.WetID, "", new { @class = "text-danger" })
            </dd>
            <dt class="bc-dt">
                @Html.DisplayNameFor(model => model.StemLijst[0].WetNaam)
            </dt>

            <dd class="bc-dd">
                @Html.DisplayFor(model => model.StemLijst[0].WetNaam)
            </dd>
            <dt class="bc-dt">
                @Html.DisplayNameFor(model => model.StemLijst[0].WetType)
            </dt>

            <dd class="bc-dd">
                @Html.DisplayFor(model => model.StemLijst[0].WetType)
            </dd>
            <dt class="bc-dt">
                @Html.DisplayNameFor(model => model.StemLijst[0].WetOmschrijving)
            </dt>
            <dd class="bc-dd">
                @Html.DisplayFor(model => model.StemLijst[0].WetOmschrijving)
            </dd>
            <dt class="bc-dt">
                @Html.DisplayNameFor(model => model.StemLijst[0].WetLink)
            </dt>
            <dd class="bc-dd">
                @Html.DisplayFor(model => model.StemLijst[0].WetLink)
            </dd>



        </dl>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Doorgaan" class="bc-button" /> &nbsp;
            @Html.ActionLink("Naar Overzicht", "Index")
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
