@model BelofteCheck.ViewModels.PartijenVM
@Html.HiddenFor(model => model.MessageSection.ErrorLevel, new { @class = "bc-msgtrigger", @onchange = "seterror(this)" })

<h2 class="bc-h">
    @Html.DisplayFor(model => model.MessageSection.Title) &nbsp;
    @Html.EditorFor(model => model.DeleteAllowed, new { htmlAttributes = new { @class = "bc-dacheck", @hidden = "hidden" } })
</h2>


<h3 class="bc-hm">@Html.DisplayFor(model => model.MessageSection.Message)</h3>


<div>

    <hr />
    <table class="bc-table2">
        @if (Model.ZetelLijst != null)
        {
            var i = 0;
            foreach (var item1 in Model.ZetelLijst)
            {
                if (i == 0)
                {
                    <tr>

                        <th class="bc-08">
                            @Html.DisplayNameFor(model => model.partij.PartijID)
                        </th>

                        <th class="bc-16">
                            @Html.DisplayFor(model => model.partij.PartijNaam)
                        </th>
                        <th class="bc-08">
                            @Html.DisplayNameFor(model => model.ZetelLijst[i].VanDatum)
                        </th>
                        <th class="bc-08">
                            @Html.DisplayNameFor(model => model.ZetelLijst[i].TotDatum)
                        </th>
                        <th class="bc-08">
                            @Html.DisplayNameFor(model => model.ZetelLijst[i].AantalZetels)
                        </th>


                    </tr>
                    <tr>

                        <td class="bc-08">
                            @Html.DisplayFor(model => model.partij.PartijID)
                        </td>

                        <td class="bc-16">
                            @Html.DisplayFor(model => model.partij.PartijNaam)
                        </td>
                        <td class="bc-08">
                            @Html.TextBoxFor(model => model.ZetelLijst[i].VanDatum, "{0:dd-MM-yyyy}", new { @readonly = "readonly" })

                        </td>
                        <td class="bc-08">
                            @Html.TextBoxFor(model => model.ZetelLijst[i].TotDatum, "{0:dd-MM-yyyy}", new { @readonly = "readonly" })
                        </td>
                        <td class="bc-08">
                            @Html.DisplayFor(model => model.ZetelLijst[i].AantalZetels)
                        </td>


                    </tr>
                }
                else
                {
                    <tr>

                        <td class="bc-08">
                            &nbsp;
                        </td>

                        <td class="bc-16">
                            &nbsp;
                        </td>
                        <td class="bc-08">
                            @Html.TextBoxFor(model => model.ZetelLijst[i].VanDatum, "{0:dd-MM-yyyy}", new { @readonly = "readonly" })

                        </td>
                        <td class="bc-08">
                            @Html.TextBoxFor(model => model.ZetelLijst[i].TotDatum, "{0:dd-MM-yyyy}", new { @readonly = "readonly" })
                        </td>
                        <td class="bc-08">
                            @Html.DisplayFor(model => model.ZetelLijst[i].AantalZetels)
                        </td>


                    </tr>
                }


                i = i + 1;
            }
        }
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Verwijder" class="bc-button bc-active" /> &nbsp;
            @Html.ActionLink("Naar Overzicht", "Index")
        </div>
    }

    <p>&nbsp;</p>
    <h4 class="bc-h">Stemgedrag</h4>
    <table class="bc-table">
        @if (Model.StemmingenLijst != null)
        {
            var i = 0;
            foreach (var item1 in Model.StemmingenLijst)
            {
                if (i == 0)
                {
                    <tr>
                        <th class="bc-16">
                            @Html.DisplayNameFor(Item1 => Item1.StemmingenLijst[i].WetID)
                        </th>
                        <th class="bc-40">
                            @Html.DisplayNameFor(Item1 => Item1.StemmingenLijst[i].WetNaam)
                        </th>
                        <th class="bc-10">
                            @Html.DisplayNameFor(Item1 => Item1.StemmingenLijst[i].Voor)
                        </th>
                        <th class="bc-10">
                            @Html.DisplayNameFor(Item1 => Item1.StemmingenLijst[i].Tegen)
                        </th>
                        <th class="bc-10">
                            @Html.DisplayNameFor(Item1 => Item1.StemmingenLijst[i].Blanco)
                        </th>
                    </tr>

                }
                <tr>

                    <td class="bc-16">
                        @Html.DisplayFor(Item1 => Item1.StemmingenLijst[i].WetID)

                    </td>
                    <td class="bc-40">
                        @Html.DisplayFor(Item1 => Item1.StemmingenLijst[i].WetNaam)

                    </td>
                    <td class="bc-10">
                        @Html.DisplayFor(Item1 => Item1.StemmingenLijst[i].Voor)
                    </td>
                    <td class="bc-10">
                        @Html.DisplayFor(Item1 => Item1.StemmingenLijst[i].Tegen)
                    </td>
                    <td class="bc-10">
                        @Html.DisplayFor(Item1 => Item1.StemmingenLijst[i].Blanco)
                    </td>
                </tr>
                i = i + 1;
            }
        }
    </table>
</div>