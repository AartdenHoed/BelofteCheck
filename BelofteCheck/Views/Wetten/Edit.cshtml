@model BelofteCheck.ViewModels.WettenVM
@Html.HiddenFor(model => model.MessageSection.ErrorLevel, new { @class = "bc-msgtrigger", @onchange = "seterror(this)" })

<h2 class="bc-h">@Html.DisplayFor(model => model.MessageSection.Title)</h2>

<h3 class="bc-h">@Html.DisplayFor(model => model.MessageSection.Message)</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <hr />
        <dl class="bc-dl">
            <dt class="bc-dt">
                @Html.LabelFor(model => model.wet.WetID)
            </dt>
            <dd class="bc-dd">
                @Html.EditorFor(model => model.wet.WetID, new { htmlAttributes = new { @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.wet.WetID, "", new { @class = "text-danger" })
            </dd>


            <dt class="bc-dt">
                @Html.LabelFor(model => model.wet.WetNaam)
            </dt>
            <dd class="bc-dd">
                @Html.EditorFor(model => model.wet.WetNaam, new { htmlAttributes = new { @class = "bc-input40" } })
                @Html.ValidationMessageFor(model => model.wet.WetNaam, "", new { @class = "text-danger" })
            </dd>


            <dt class="bc-dt">
                @Html.LabelFor(model => model.wet.WetType)
            </dt>
            <dd class="bc-dd">
                @Html.EditorFor(model => model.wet.WetType)
                @Html.ValidationMessageFor(model => model.wet.WetType, "", new { @class = "text-danger" })
            </dd>


            <dt class="bc-dt">
                @Html.LabelFor(model => model.wet.WetOmschrijving)
            </dt>
            <dd class="bc-dd">
                @Html.EditorFor(model => model.wet.WetOmschrijving, new { htmlAttributes = new { @rows = "3", @class = "bc-input" } })
                @Html.ValidationMessageFor(model => model.wet.WetOmschrijving, "", new { @class = "text-danger" })
            </dd>


            <dt class="bc-dt">
                @Html.LabelFor(model => model.wet.WetLink)
            </dt>
            <dd class="bc-dd">
                @Html.EditorFor(model => model.wet.WetLink, new { htmlAttributes = new { @class = "bc-input" } })
                @Html.ValidationMessageFor(model => model.wet.WetLink, "", new { @class = "text-danger" })
            </dd>
        </dl>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Opslaan" class="bc-button" /> &nbsp;

            @Html.ActionLink("Naar Overzicht", "Index")

        </div>
    </div>


    <p>&nbsp;</p>
    <h4 class="bc-h">Gerelateerde onderwerpen</h4>
    <div class="form-group">
        <table class="bc-table">
            @if (Model.OnderwerpenLijst != null)
            {
                var i = 0;


                foreach (var item1 in Model.OnderwerpenLijst)
                {

                    if (i == 0)

                    {
                        <tr>
                            <th class="bc-08">
                                @Html.DisplayNameFor(Item1 => Item1.OnderwerpenLijst[i].Geselecteerd)
                            </th>
                            <th class="bc-36">

                                @Html.DisplayNameFor(Item1 => Item1.OnderwerpenLijst[i].Toelichting)
                            </th>
                            <th class="bc-16">

                                @Html.DisplayNameFor(Item1 => Item1.OnderwerpenLijst[i].OnderwerpID)
                            </th>
                            <th class="bc-36">

                                @Html.DisplayNameFor(Item1 => Item1.OnderwerpenLijst[i].Omschrijving)
                            </th>

                        </tr>

                    }
                    <tr>

                        <td class="bc-08">
                            @Html.CheckBoxFor(Item1 => Item1.OnderwerpenLijst[i].Geselecteerd, new { @class = "bc-areatrigger form-control", @onchange = "setreq(this)" })

                        </td>
                        <td class="bc-36">
                            @Html.TextAreaFor(Item1 => Item1.OnderwerpenLijst[i].Toelichting, new { @class = "bc-area bc-field" })
                            @Html.ValidationMessageFor(Item1 => Item1.OnderwerpenLijst[i].Toelichting, "", new { @class = "bc-error" })

                        </td>
                        <td class="bc-16">
                            @Html.EditorFor(Item1 => Item1.OnderwerpenLijst[i].OnderwerpID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(Item1 => Item1.OnderwerpenLijst[i].OnderwerpID, "", new { @class = "text-danger" })

                        </td>
                        <td class="bc-36">
                            @Html.EditorFor(Item1 => Item1.OnderwerpenLijst[i].Omschrijving, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(Item1 => Item1.OnderwerpenLijst[i].Omschrijving, "", new { @class = "text-danger" })
                        </td>

                    </tr>
                    i = i + 1;
                }
            }

        </table>

    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
