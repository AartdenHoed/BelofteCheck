@model BelofteCheck.ViewModels.WettenVM

<h2>@Html.DisplayFor(model => model.MessageSection.Title)</h2>

<h3>@Html.DisplayFor(model => model.MessageSection.Message)</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.WetID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.WetID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.WetID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WetNaam, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.WetNaam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.WetNaam, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WetOmschrijving, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.WetOmschrijving, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.WetOmschrijving, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WetLink, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.WetLink, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.WetLink, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aanmaken" class="btn btn-default" />
            </div>
        </div>
    </div>
    <h4>Gerelateerde onderwerpen</h4>
    <table class="bc-table">
        @if (Model.OnderwerpenLijst != null)
        {
            var i = 0;
            foreach (var item1 in Model.OnderwerpenLijst)
            {
                if (i == 0)
                {
                    <tr>
                        <th class="bc-16">
                            @Html.DisplayNameFor(Item1 => Item1.OnderwerpenLijst[i].OnderwerpID)
                        </th>
                        <th class="bc-40">
                            @Html.DisplayNameFor(Item1 => Item1.OnderwerpenLijst[i].Omschrijving)
                        </th>
                        <th class="bc-40">
                            @Html.DisplayNameFor(Item1 => Item1.OnderwerpenLijst[i].Toelichting)
                        </th>
                    </tr>

                }
                <tr>

                    <td class="bc-16">
                        @Html.DisplayFor(Item1 => Item1.OnderwerpenLijst[i].OnderwerpID)

                    </td>
                    <td class="bc-40">
                        @Html.DisplayFor(Item1 => Item1.OnderwerpenLijst[i].Omschrijving)

                    </td>
                    <td class="bc-40">
                        @Html.DisplayFor(Item1 => Item1.OnderwerpenLijst[i].Toelichting)
                    </td>
                </tr>
                i = i + 1;
            }
        }

    </table>
    <p>&nbsp;</p>
}

<div>
    @Html.ActionLink("Naar Overzicht", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
