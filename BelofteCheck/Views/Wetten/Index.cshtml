@model BelofteCheck.ViewModels.WettenListVM
@Html.HiddenFor(model => model.MessageSection.ErrorLevel, new { @class = "bc-msgtrigger", @onchange = "seterror(this)" })

<h2 class="bc-h">@Html.DisplayFor(model => model.MessageSection.Title)</h2>

<h3 class="bc-h">@Html.DisplayFor(model => model.MessageSection.Message)</h3>

<p>
    @Html.ActionLink("Nieuw", "Create")
</p>
<table class="table">
    <tr>
        <th class="bc-08">
            @Html.DisplayNameFor(model => model.WettenLijst[0].WetID)
        </th>
        <th class="'bc-16">
            @Html.DisplayNameFor(model => model.WettenLijst[0].WetNaam)
        </th>
        <th class="'bc-08">
            @Html.DisplayNameFor(model => model.WettenLijst[0].WetType)
        </th>
        <th class="bc-36">
            @Html.DisplayNameFor(model => model.WettenLijst[0].WetOmschrijving)
        </th>
        <th class="bc-16">
            @Html.DisplayNameFor(model => model.WettenLijst[0].WetLink)
        </th>
        <th class="bc16"></th>
    </tr>

    @foreach (var item in Model.WettenLijst)
    {
        <tr>
            <td class="bc-08">
                @Html.DisplayFor(modelItem => item.WetID)
            </td>
            <td class="bc-16">
                @Html.DisplayFor(modelItem => item.WetNaam)
            </td>
            <td class="bc-08">
                @Html.DisplayFor(modelItem => item.WetType)
            </td>
            <td class="bc-36">
                @Html.DisplayFor(modelItem => item.WetOmschrijving)
            </td>
            <td class="bc-16">
                @Html.DisplayFor(modelItem => item.WetLink)
            </td>
            <td class="bc-16">
                @Html.ActionLink("Bewerk", "Edit", new { WetID = item.WetID }) |
                @Html.ActionLink("Bekijk", "Details", new { WetID = item.WetID }) |
                @Html.ActionLink("Verwijder", "Delete", new { WetID = item.WetID })  |
                @Html.ActionLink("Stemming", "Create", "Stemmingen", new { WetID = item.WetID, StemDatum = DateTime.MinValue }, null)
            </td>
        </tr>
    }

</table>
